<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">
  <fieldset>
    <legend>
      {{localize "CALENDARIA.Common.DateFormats"}}
      <button type="button" class="legend-help" data-action="showTokenReference" data-context-type="all"
        data-tooltip aria-label="{{localize 'CALENDARIA.TokenReference.Title'}}">
        <i class="fas fa-circle-question"></i>
      </button>
    </legend>
    <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormats"}}</p>

    <div class="form-group">
      <label for="editor-date-format-short">{{localize "CALENDARIA.Editor.Field.DateFormatShort"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-short" name="dateFormats.short" value="{{calendar.dateFormats.short}}"
          placeholder="{{localize 'CALENDARIA.Editor.Placeholder.DateShortExample'}}">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatShort"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-long">{{localize "CALENDARIA.Editor.Field.DateFormatLong"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-long" name="dateFormats.long" value="{{calendar.dateFormats.long}}"
          placeholder="{{localize 'CALENDARIA.Editor.Placeholder.DateLongExample'}}">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatLong"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-full">{{localize "CALENDARIA.Editor.Field.DateFormatFull"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-full" name="dateFormats.full" value="{{calendar.dateFormats.full}}"
          placeholder="{{localize 'CALENDARIA.Editor.Placeholder.DateFullExample'}}">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatFull"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-time">{{localize "CALENDARIA.Editor.Field.DateFormatTime"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-time" name="dateFormats.time" value="{{calendar.dateFormats.time}}"
          placeholder="{{localize 'CALENDARIA.Editor.Placeholder.TimeExample'}}">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatTime"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-time12">{{localize "CALENDARIA.Editor.Field.DateFormatTime12"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-time12" name="dateFormats.time12"
          value="{{calendar.dateFormats.time12}}"
          placeholder="{{localize 'CALENDARIA.Editor.Placeholder.Time12Example'}}">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatTime12"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-weekHeader">{{localize "CALENDARIA.Editor.Field.DateFormatWeekHeader"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-weekHeader" name="dateFormats.weekHeader"
          value="{{calendar.dateFormats.weekHeader}}" placeholder="[Week] W [of] MMMM, Y">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatWeekHeader"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-yearHeader">{{localize "CALENDARIA.Editor.Field.DateFormatYearHeader"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-yearHeader" name="dateFormats.yearHeader"
          value="{{calendar.dateFormats.yearHeader}}" placeholder="Y">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatYearHeader"}}</p>
    </div>

    <div class="form-group">
      <label for="editor-date-format-yearLabel">{{localize "CALENDARIA.Editor.Field.DateFormatYearLabel"}}</label>
      <div class="form-fields">
        <input type="text" id="editor-date-format-yearLabel" name="dateFormats.yearLabel"
          value="{{calendar.dateFormats.yearLabel}}" placeholder="Y G">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Hint.DateFormatYearLabel"}}</p>
    </div>
  </fieldset>
</section>
