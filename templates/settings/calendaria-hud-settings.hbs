<section class="hud-settings-content standard-form">
  {{!-- Active Calendar (GM only) --}}
  {{#if isGM}}
  <div class="form-group">
    <label>{{localize "CALENDARIA.Settings.ActiveCalendar.Name"}}</label>
    <div class="form-fields">
      <select name="activeCalendar">
        {{#each calendars}}
        <option value="{{this.id}}"{{#if this.isActive}} selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <p class="hint">{{localize "CALENDARIA.Settings.ActiveCalendar.Hint"}}</p>
  </div>
  {{/if}}

  {{!-- Display Mode --}}
  <div class="form-group">
    <label>{{localize "CALENDARIA.Settings.CalendarHUDMode.Name"}}</label>
    <div class="form-fields">
      <select name="mode">
        <option value="fullsize"{{#if modeFullsize}} selected{{/if}}>{{localize "CALENDARIA.Settings.CalendarHUDMode.Fullsize"}}</option>
        <option value="compact"{{#if modeCompact}} selected{{/if}}>{{localize "CALENDARIA.Settings.CalendarHUDMode.Compact"}}</option>
      </select>
    </div>
    <p class="hint">{{localize "CALENDARIA.Settings.CalendarHUDMode.Hint"}}</p>
  </div>

  {{!-- Sticky Options --}}
  <fieldset>
    <legend>{{localize "CALENDARIA.HUD.Settings.StickyOptions"}}</legend>

    <div class="form-group">
      <label>{{localize "CALENDARIA.HUD.StickyTray"}}</label>
      <div class="form-fields">
        <input type="checkbox" name="stickyTray"{{#if stickyTray}} checked{{/if}}>
      </div>
      <p class="hint">{{localize "CALENDARIA.HUD.Settings.StickyTrayHint"}}</p>
    </div>

    <div class="form-group">
      <label>{{localize "CALENDARIA.HUD.StickyPosition"}}</label>
      <div class="form-fields">
        <input type="checkbox" name="stickyPosition"{{#if stickyPosition}} checked{{/if}}>
      </div>
      <p class="hint">{{localize "CALENDARIA.HUD.Settings.StickyPositionHint"}}</p>
    </div>
  </fieldset>

  {{!-- Position Reset --}}
  <div class="form-group">
    <label>{{localize "CALENDARIA.HUD.Settings.ResetPosition"}}</label>
    <div class="form-fields">
      <button type="button" data-action="resetPosition">
        <i class="fas fa-undo"></i>
        {{localize "CALENDARIA.Settings.ResetPosition.Label"}}
      </button>
    </div>
    <p class="hint">{{localize "CALENDARIA.HUD.Settings.ResetPositionHint"}}</p>
  </div>
</section>
