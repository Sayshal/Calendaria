<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">

  {{#if isGM}}
    <fieldset>
      <legend>{{localize "CALENDARIA.Settings.StickyZones.Name"}}</legend>

      <div class="form-group">
        <label>{{localize "CALENDARIA.Settings.StickyZones.Enable"}}</label>
        <div class="form-fields">
          <input type="checkbox" name="stickyZonesEnabled" {{#if stickyZonesEnabled}}checked{{/if}}>
        </div>
        <p class="hint">{{localize "CALENDARIA.Settings.StickyZones.Hint"}}</p>
      </div>
    </fieldset>

    <fieldset>
      <legend>{{localize "CALENDARIA.SettingsPanel.Section.SceneIntegration"}}</legend>

      <div class="form-group">
        <label>{{localize "CALENDARIA.Settings.DarknessSync.Name"}}</label>
        <div class="form-fields">
          <input type="checkbox" name="darknessSync" {{#if darknessSync}}checked{{/if}}>
        </div>
        <p class="hint">{{localize "CALENDARIA.Settings.DarknessSync.Hint"}}</p>
      </div>

      <div class="form-group">
        <label>{{localize "CALENDARIA.Settings.DarknessWeatherSync.Name"}}</label>
        <div class="form-fields">
          <input type="checkbox" name="darknessWeatherSync" {{#if darknessWeatherSync}}checked{{/if}}>
        </div>
        <p class="hint">{{localize "CALENDARIA.Settings.DarknessWeatherSync.Hint"}}</p>
      </div>

      <div class="form-group">
        <label>{{localize "CALENDARIA.Settings.AmbienceSync.Name"}}</label>
        <div class="form-fields">
          <input type="checkbox" name="ambienceSync" {{#if ambienceSync}}checked{{/if}}>
        </div>
        <p class="hint">{{localize "CALENDARIA.Settings.AmbienceSync.Hint"}}</p>
      </div>

      <div class="form-group">
        <label>{{localize "CALENDARIA.Settings.DefaultBrightnessMultiplier.Name"}}</label>
        <div class="form-fields range-field">
          <input type="range" name="defaultBrightnessMultiplier" min="0.5" max="1.5" step="0.1"
            value="{{defaultBrightnessMultiplier}}">
          <span class="range-value">{{defaultBrightnessMultiplier}}x</span>
        </div>
        <p class="hint">{{localize "CALENDARIA.Settings.DefaultBrightnessMultiplier.Hint"}}</p>
      </div>
    </fieldset>
  {{/if}}

  {{#unless isGM}}
    <div class="info-box">
      <i class="fas fa-info-circle"></i>
      <p>{{localize "CALENDARIA.SettingsPanel.CanvasTab.PlayerMessage"}}</p>
    </div>
  {{/unless}}

</section>
