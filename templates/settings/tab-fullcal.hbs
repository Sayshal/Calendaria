<section
    class="tab {{tab.cssClass}}"
    data-tab="{{tab.id}}"
    data-group="{{tab.group}}"
>

    {{!-- Open Button --}}
    <div class="form-group stacked button-row open-app-button">
        <button type="button" data-action="openFullCal">
            <i class="fas fa-external-link-alt"></i>
            {{localize "CALENDARIA.Common.Open"}}
        </button>
    </div>

    {{!-- Info Message --}}
    <div class="info-box">
        <i class="fas fa-info-circle"></i>
        <p>{{localize "CALENDARIA.SettingsPanel.FullCalTab.Info"}}</p>
    </div>

</section>
