<div class="standard-form">

  {{!-- Temperatures --}}
  <fieldset>
    <legend>{{localize "CALENDARIA.Editor.Season.Climate.Temperatures"}}</legend>
    <p class="hint">{{localize "CALENDARIA.Editor.Weather.Zone.TemperaturesUnitHint" unit=tempLabel}}</p>
    <div class="form-group">
      <div class="form-fields temperature">
        <input type="number" name="tempMin" value="{{tempMin}}" placeholder="{{localize 'CALENDARIA.Common.Low'}}">
        <i class="fa-solid fa-right-long"></i>
        <input type="number" name="tempMax" value="{{tempMax}}" placeholder="{{localize 'CALENDARIA.Common.High'}}">
      </div>
      <p class="hint">{{localize "CALENDARIA.Editor.Season.Climate.TemperaturesHint"}}</p>
    </div>
  </fieldset>

  {{!-- Presets --}}
  <fieldset>
    <legend>{{localize "CALENDARIA.Editor.Season.Climate.WeatherChances"}}</legend>
    <p class="hint">{{localize "CALENDARIA.Editor.Season.Climate.WeatherChancesHint"}}</p>
    <div class="preset-list">
      {{#each categories}}
        <div class="preset-category">
          <h4>{{this.label}}</h4>
          {{#each this.presets}}
            <div class="preset-row" data-preset-id="{{this.id}}">
              <span class="preset-icon" style="color: {{this.color}}"><i class="fas {{this.icon}}"></i></span>
              <span class="preset-name">
                <label>{{this.label}}</label>
              </span>
              <input type="number" name="preset_{{this.id}}"
                value="{{this.chance}}" min="0" max="100" step="0.1"
                placeholder="â€”">
              <span class="units">%</span>
            </div>
          {{/each}}
        </div>
      {{/each}}
    </div>
  </fieldset>

</div>
